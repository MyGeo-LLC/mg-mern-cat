{
  "name": "mern-project",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "node backend/server.js",
    "build": "react-scripts build",
    "clean": "rimraf build",
    "test": "jest",
    "electron-start": "electron .",
    "electron-pack": "electron-builder --win --linux",
    "docker-build": "docker-compose -f docker-compose.prod.yml build",
    "docker-up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker-down": "docker-compose -f docker-compose.prod.yml down"
  },
  "build": {
    "appId": "com.example.yourapp",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "backend/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
    "electron-is-dev": "^1.2.0",
    "jest": "^27.0.6",
    "rimraf": "^3.0.2"
  }
}
